<?xml version="1.0" encoding="utf-8"?>
<com.example.wangyitong.chat.ChatListViewItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/chat_item_margin_left"
    android:layout_marginTop="@dimen/chat_item_margin_top"
    android:gravity="right"
    android:background="@null"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/chat_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="12124324fadfagdagadf"
        android:minHeight="@dimen/chat_avatar_size"
        android:background="@drawable/chat_bubble"/>

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="@dimen/chat_avatar_size"
        android:layout_height="@dimen/chat_avatar_size"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_avatar_default" />

</com.example.wangyitong.chat.ChatListViewItem>